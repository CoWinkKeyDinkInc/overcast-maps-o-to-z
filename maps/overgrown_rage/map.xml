<?xml version="1.0"?>
<map proto="1.3.0">
<name>Overgrown Rage</name>
<version>2.0.3</version>
<objective>Eliminate the opposing team in under 8 minutes.</objective>
<game-mode>rage</game-mode>
<authors>
    <author uuid="c65e66b3-e932-4b33-b907-fe4916806076"/> <!-- Draco_Rogue -->
</authors>
<contributors>
    <contributor uuid="afb49ef2-888e-4280-857a-04cfac39e25d" contribution="Map Feedback"/> <!-- Pr0tatoe -->
</contributors>
<blitz>
    <time>8m</time>        
    <lives>1</lives> 
    <title>Blitz: Rage</title>      
</blitz>
<rage/>
<teams>
   <team color="blue" max="30">Blue</team>
   <team color="dark red" max="30">Red</team>
</teams>
<spawns>
    <spawn team="blue" kit="blue" yaw="180">
        <cuboid min="-42,134,58" max="-38,134,62"/>
    </spawn>
    <spawn team="red" kit="red" yaw="0">
        <cuboid min="-38,134,-58" max="-42,134,-62"/>
    </spawn>
    <default yaw="-90">
        <cuboid min="95,166,-2" max="91,166,2"/>
    </default>
</spawns>
<kits>
    <kit name="spawn">
        <item slot="0" enchantment="damage all:10" name="§e§l1-Hit kill!">iron sword</item>
        <item slot="1" enchantment="arrow damage:10" name="§e§l1-Shot Kill!">bow</item>
        <item slot="2" amount="1">arrow</item>
        <potion duration="5" amplifier="1">heal</potion>
        <potion duration="5" amplifier="4">damage resistance</potion>
    </kit>
    <kit name="blue" parents="spawn">
        <chestplate color="99B2F2" locked="true">leather chestplate</chestplate>
    </kit>
    <kit name="red" parents="spawn">
        <chestplate color="CC4C4C" locked="true">leather chestplate</chestplate>
    </kit>
</kits>
<itemremove>
    <item>leather chestplate</item>
</itemremove>
<killreward>
    <item>arrow</item>
</killreward>
<timelock>on</timelock>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
</toolrepair>
<hunger>
    <depletion>off</depletion>
</hunger>
<regions>
    <apply block="deny-all">
        <rectangle min="-oo,-oo" max="oo,oo"/>
    </apply>
</regions>
<include src="blitz-global.xml"/>
</map>
